<div class="container">
   <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
   <div class="carousel-inner">
{{#each sleeps as |sleep|}}
<div class="carousel-item {{#if @first}}active{{/if}}">
  <section data-id="{{sleep.id}}" class="sleep-log" >
    <h6>Hours:</h6>
    <h4>
      {{sleep.hours}}
    </h4>
    <h6>Date:</h6>
    <p>
        {{sleep.date}}
    </p>
    <h6>Exercise:</h6>
    <p>
        {{sleep.exercise}}
    </p>
    <h6>Food:</h6>
    <p>
        {{sleep.food}}
    </p>


    <btn class= "btn btn-danger delete" data-id="{{sleep.id}}"> delete </btn>
    <form class="update-sleep" data-id="{{sleep.id}}">
        <input type="date" name="sleep[date]" placeholder="date" required>
        <input type="number" name="sleep[hours]" placeholder="hours slept" required>
        <input type="text" name="sleep[food]" placeholder="what did you eat?" required>
        <input type="text" name="sleep[exercise]" placeholder="did you exercise?" required>
        <button class="btn btn-primary"> update your sleep </button>
    </form>
  </section>
</div>

{{/each}}
<div class="carousel-item"><h3>ADD MORE SLEEPS!</h3></div>
<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
     <span class="carousel-control-prev-icon" aria-hidden="true"></span>
     <span class="sr-only">Back</span>
   </a>
   <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
     <span class="carousel-control-next-icon" aria-hidden="true"></span>
     <span class="sr-only">Next</span>
   </a>
 </div>
</div>
</div>
